    <link href="vendor/StyleSheet1.css" rel="stylesheet" />

</head>
<body>
    <form runat="server">

        <div class="d-flex" id="wrapper">
            <div class="bg-light border-light" id="sidebar-wrapper">
                <div class="sidebar-heading">Family</div>
                <div class="list-group list-group-flush">
                    @Html.ActionLink("Family", "ViewFamilyMemberWithDetails", "FamilyMember", new { area = "" }, new { @class = "list-group-item list-group-item-action bg-light" })
